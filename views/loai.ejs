<%- include('layout/header', { title: 'Danh sách loại' }) %>

<div class="container mt-4">
  <h1>Danh sách loại</h1>
  <a href="/loai/them" class="btn btn-success mb-3">➕ Thêm loại</a>

  <ul class="list-group">
    <% if (loai && loai.length > 0) { %>
      <% loai.forEach(l => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= l.TenLoai %></span>
          <span>
            <a href="/loai/sua/<%= l._id %>" class="btn btn-sm btn-primary me-2">
              <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a href="/loai/xoa/<%= l._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa loại này?');">
              <i class="bi bi-trash"></i> Xóa
            </a>
          </span>
        </li>
      <% }) %>
    <% } else { %>
      <li class="list-group-item text-center">Chưa có loại nào.</li>
    <% } %>
  </ul>
</div>

<%- include('footer') %>
